{
  "name": "bookscan",
  "version": "1.0.0",
  "description": "Mobile-friendly book scanning and collection management app",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "esbuild src/app.ts --bundle --outfile=dist/bundle.js --format=esm --sourcemap",
    "watch": "esbuild src/app.ts --bundle --outfile=dist/bundle.js --format=esm --sourcemap --watch",
    "serve": "npx http-server . -p 8080"
  },
  "keywords": [
    "books",
    "scanner",
    "isbn",
    "collections"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.12",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "html5-qrcode": "^2.3.8"
  }
}
